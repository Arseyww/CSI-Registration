@model Attendee
@{
    ViewData["Title"] = "Registration";
}
<form asp-action="Registration" method="post">
    <div class="">
        <div class="text-danger" asp-validation-summary="All"></div>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email">Enter your email address:</label>
        <input class="form-control" name="email" type="email"/>
    </div>
    <div class="text-center">
        <button class="btn btn-success" type="submit">Check registration</button>
        <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Return to Home Page</a>
    </div>
</form>
